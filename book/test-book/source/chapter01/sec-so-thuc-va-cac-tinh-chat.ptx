  <exercise>
    <title>MathBox Example</title>
    <verbatim>
    <![CDATA[ 
      <div id="mathbox-container" style="width:800px; height:600px;"></div>
      <script>
        var mathbox = mathBox({
          plugins: ['core', 'controls'],
        }).start();


        var three = mathbox.three;
        three.camera.position.set(2, 1, 3);
        three.controls.noRotate = true;

        var view = mathbox.cartesian({
          range: [[-2, 2], [-2, 2], [-2, 2]],
          scale: [1, 1, 1],
        });

        view.grid({
          width: 1,
          divideX: 10,
          divideY: 10,
        });

        view.axis({ axis: 1 });
        view.axis({ axis: 2 });
        view.axis({ axis: 3 });
      </script>
    ]]>
    </verbatim>
  </exercise>

